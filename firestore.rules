rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Canvas document - authenticated users can read and write
    match /canvas/{canvasId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Alternative: if you change to use 'canvases' collection in the future
    match /canvases/{canvasId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Chat History - users can only access their own chat history
    match /chatHistory/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Comments - authenticated users can read all, create their own, and update/delete their own
    match /comments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null 
        && request.resource.data.authorId == request.auth.uid;
      // Allow update if user is the author, or if only updating resolve status
      allow update: if request.auth != null 
        && (resource.data.authorId == request.auth.uid 
            || (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['text', 'authorId', 'shapeId', 'position', 'canvasId', 'parentId', 'threadId'])));
      allow delete: if request.auth != null 
        && resource.data.authorId == request.auth.uid;
    }
    
    // AI Tasks - users can only read, create, update, and delete their own AI tasks
    match /ai_tasks/{taskId} {
      // Allow reading single document if it belongs to the user
      allow get: if request.auth != null 
        && resource.data.authorId == request.auth.uid;
      
      // Allow listing/querying - Firestore will only return docs matching the query
      // The query must filter by authorId matching the current user
      allow list: if request.auth != null;
      
      // Only creator can create their own tasks
      allow create: if request.auth != null 
        && request.resource.data.authorId == request.auth.uid;
      
      // Only creator can update their own tasks
      allow update: if request.auth != null 
        && resource.data.authorId == request.auth.uid;
      
      // Only creator can delete their own tasks
      allow delete: if request.auth != null 
        && resource.data.authorId == request.auth.uid;
    }
  }
}

